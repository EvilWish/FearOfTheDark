<config>

    <append xpath="/controls">
    
        <FoTDmainmenubutton depth="3" pos="0,0" width="200" height="32"
                enabled_font_color="[codeActive]" disabled_font_color="[codeInActive]" visible="true" enabled="true" pivot="left" tooltip_key="" sound="[default_click]" caption="" caption_key="" >
            <rect name="${name}" depth="${depth}" pos="${pos}" width="${width}" height="${height}" enabled_font_color="${enabled_font_color}" disabled_font_color="${disabled_font_color}" controller="SimpleButton" visible="${visible}" button_enabled="${enabled}" font_size_default="${height-20}" font_size_hover="${height-16}">
                <button name="clickable" sprite="ui_button_main"  pos="0,${Round(-height/2,0)}" defaultcolor="255,255,255,180" hovercolor="[white]" type="sliced" hoverscale="1.0" pivot="${pivot}" tooltip_key="${tooltip_key}" sound_play_on_hover="[default_hover]" sound="${sound}"/>
                <label depth="2" name="btnLabel" width="${width-20}" pos="20,${Round(-height/2,0)}" justify="left" text="${caption}" text_key="${caption_key}" effect="outline" pivot="${pivot}" font_size="${height-20}" upper_case="true" />
            </rect>
        </FoTDmainmenubutton>
    
    </append>

</config>